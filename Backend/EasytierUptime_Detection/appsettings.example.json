{
  "Probe": {
    "Mode": "easytier_native",
    "TimeoutSeconds": 3
  },
  "Jwt": {
    "Issuer": "easytier-uptime",
    "Audience": "easytier-uptime-clients",
    "Key": "<replace-with-secure-key>",
    "ExpireMinutes": 240
  },
  "Smtp": {
    "Host": "<smtp-host>",
    "Port": 587,
    "EnableSsl": true,
    "Username": "<smtp-username>",
    "Password": "<smtp-password>",
    "FromAddress": "<from-email>",
    "FromDisplayName": "EasyTier Uptime"
  },
  "Database": {
    "Provider": "MySql",
    "ConnectionString": "<mysql-connection-string>"
  }
}
